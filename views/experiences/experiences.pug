doctype html
html(lang="fr")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='/css/loader.css')
        link(rel='stylesheet', href='/css/experiences.css')
        link(rel='stylesheet', href='/css/footer.css')
        title My Portfolio
    body 
        include ../includes/loader.pug
        .page
            .nav    
                include ../includes/navigation.pug
            .container
                H1(class="titlePage") EXPERIENCES PROFECIONELLES
                ul(class='cards_container')
                    each experience in listeExperiences
                        li(class='card_container_date')
                            .card_container
                                .left_side_carde
                                    img(src=`${experience.image}`, alt="")
                                    .logo_company
                                        img(src=`${experience.logo_company}`, alt="")
                                    .logo_customer
                                        img(src=`${experience.logo_customer}`, alt="")
                                .middle_side_carde
                                    .description
                                        h2= experience.title                 
                                        <hr>
                                        //Unescaped Buffered Code https://pugjs.org/language/code.html
                                        p!= experience.description
                                    .logos_skills
                                        each skill in experience.skills
                                            img(src=`${skill.logo}`, alt="")
                                        each library in experience.skills_libraries
                                            img(src=`${library.logo}`, alt="")
                            .right_side_carde
                                p(class='number')= experience.number_of_months
                                p(class='mois')= 'MOIS'
            include ../includes/footer.pug
        script(src="/javascript/loader/loader.js")
        script(src="/javascript/navigation/navigation.js")


